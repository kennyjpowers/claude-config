{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(node:*)"
    ],
    "deny": [
      ".env",
      ".env.*",
      "**/*.key",
      "**/*.pem",
      "secrets/**",
      "credentials/**",
      ".git/**"
    ]
  },
  "environmentVariables": {
    "NODE_ENV": "development",
    "API_URL": "${API_URL}"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Validating file edit...'",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Claude Code session started in' $CLAUDE_PROJECT_DIR"
          }
        ]
      }
    ]
  }
}
